<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vanip_000.profile_salesbox.Profile_Main"
    android:background="#e5e8e8">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:id="@+id/rl_details">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rl_timedate"
            android:background="#ffffff">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/rl_timedate"
            android:background="#FF9C33">


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_details"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/notes">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_first_half">



        <TextView
            android:textColor="#000000"
            android:layout_margin="9dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notes_leads"
            android:text="Notes"
            />
        <ImageView
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_down_two"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/tv_notes_leads"
            android:layout_alignTop="@+id/tv_notes_leads" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d8dc"
        android:layout_below="@+id/rl_first_half"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_workshop"
            android:layout_below="@+id/rl_first_half"
            android:layout_centerVertical="true"
            android:text="WorkShop"
            android:textColor="#006677"
            android:textSize="10sp"
            android:layout_margin="10dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/rl_interest_in">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_interest">



            <TextView
                android:textColor="#000000"
                android:layout_margin="9dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_interest"
                android:text="Interested In"
                />
            <ImageView
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_down_two"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/tv_interest"
                android:layout_alignTop="@+id/tv_interest"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d8dc"
            android:layout_below="@+id/rl_notes"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_explain_notes"
            android:layout_below="@+id/rl_notes"
            android:text="WorkShop"
            android:textColor="#006677"
            android:textSize="10sp"
            android:layout_margin="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_notes">



            <TextView
                android:textColor="#000000"
                android:layout_margin="9dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_notes"
                android:text="Interested In"
                />
            <ImageView
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_down_two"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/tv_notes"
                android:layout_alignTop="@+id/tv_notes"/>

        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_interest_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_source">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_source_lead">



            <TextView
                android:textColor="#000000"
                android:layout_margin="9dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_source_lead"
                android:text="Source"
                />
            <ImageView
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_down_two"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/tv_source_lead"
                android:layout_alignTop="@+id/tv_source_lead"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d8dc"
            android:layout_below="@+id/rl_source_lead"/>



        <RelativeLayout
            android:layout_below="@+id/rl_source_lead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_sour"
            >

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_source_profile"
                android:src="@drawable/icon_tab_contact_active_two"/>


            <TextView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Testing Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_source_name"
                android:layout_toRightOf="@+id/image_source_profile"/>


            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_email"
                android:layout_marginStart="15dp"
                android:layout_alignTop="@+id/txt_email_id"
                android:layout_toRightOf="@+id/image_source_profile"
                android:layout_alignBottom="@+id/txt_email_id" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txt_source_name"
                android:layout_toRightOf="@+id/image_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_email_id"
                android:text="testing@gmail.com"/>










        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_owner">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_owner_lead">



            <TextView
                android:textColor="#000000"
                android:layout_margin="9dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_owner_lead"
                android:text="Owner"
                />
            <ImageView
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_down_two"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/tv_owner_lead"
                android:layout_alignTop="@+id/tv_owner_lead"/>

        </RelativeLayout>

                <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d8dc"
            android:layout_below="@+id/rl_owner_lead"/>



                <RelativeLayout
            android:layout_below="@+id/rl_owner_lead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_own">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_owner_profile"
                android:src="@drawable/icon_tab_contact_active_two"/>


            <TextView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Testing Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_owner_name"
                android:layout_toRightOf="@+id/image_owner_profile"/>


            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_email_owner"
                android:layout_marginStart="15dp"
                android:layout_alignTop="@+id/txt_owneremail_id"
                android:layout_toRightOf="@+id/image_owner_profile"
                android:layout_alignBottom="@+id/txt_owneremail_id" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txt_owner_name"
                android:layout_toRightOf="@+id/image_email_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_owneremail_id"
                android:text="testing@gmail.com"/>










        </RelativeLayout>



        </RelativeLayout>





    </RelativeLayout>

    </ScrollView>

</RelativeLayout>
