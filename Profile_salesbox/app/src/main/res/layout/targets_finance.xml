<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:backgroundTint="#000000"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/ll_tab"
        android:layout_margin="15dp"
        >
        <Button
            android:background="#ffffff"
            android:textSize="10sp"
            android:text="Sales"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_sales"/>
        <Button
            android:background="#ffffff"
            android:textSize="10sp"
            android:text="Revenue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_revenue"/>
        <Button
            android:background="#ffffff"
            android:textSize="10sp"
            android:text="activity"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_activity"/>
        <Button
            android:background="#ffff11"
            android:textSize="10sp"
            android:text="Finance"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_finance"/>

    </LinearLayout>


    <TextView
        android:id="@+id/txt_company_finance"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_tab"
        android:text="Company"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:layout_marginLeft="31dp"
        android:src="@drawable/icon_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_drop"
        android:layout_alignBottom="@+id/txt_company_finance"
        android:layout_toRightOf="@+id/txt_company_finance"
        android:layout_toEndOf="@+id/txt_company_finance"
        android:layout_marginStart="31dp"
        android:layout_below="@+id/ll_tab" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_left"
        android:src="@drawable/bt_previous_2"
        android:layout_alignTop="@+id/image_drop"
        android:layout_toRightOf="@+id/image_drop"
        android:layout_toEndOf="@+id/image_drop"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_alignBottom="@+id/image_drop" />


    <TextView
        android:id="@+id/txt_appointment_finance"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Appointments/Week"
        android:layout_alignTop="@+id/button_right"
        android:layout_toLeftOf="@+id/button_right"
        android:layout_toStartOf="@+id/button_right"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_right"
        android:src="@drawable/bt_next_two"
        android:layout_below="@+id/ll_tab"
        android:layout_alignRight="@+id/ll_tab"
        android:layout_alignEnd="@+id/ll_tab"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignBottom="@+id/image_drop" />


    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/txt_huyen_test"
        android:text="Huyen Test"
        android:layout_below="@+id/txt_company_finance"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:gravity="center"
        android:padding="5dp"
        android:textSize="15sp"
        android:background="@drawable/background"
        android:text="15"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/text_huyen_value"
        android:layout_alignTop="@+id/txt_huyen_test"
        android:layout_alignLeft="@+id/txt_appointment_finance"
        android:layout_alignStart="@+id/txt_appointment_finance"
        android:layout_alignRight="@+id/txt_appointment_finance"
        android:layout_alignEnd="@+id/txt_appointment_finance" />


    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/txt_karthik_testig"
        android:text="karthik Testing"
        android:layout_below="@+id/txt_huyen_test"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>


    <TextView
        android:gravity="center"
        android:padding="5dp"
        android:textSize="15sp"
        android:background="@drawable/background"
        android:text="15"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/text_testing_value"
        android:layout_alignTop="@+id/txt_karthik_testig"
        android:layout_alignLeft="@+id/text_huyen_value"
        android:layout_alignStart="@+id/text_huyen_value"
        android:layout_alignRight="@+id/text_huyen_value"
        android:layout_alignEnd="@+id/text_huyen_value" />


    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/txt_test"
        android:text="Test 00"
        android:layout_below="@+id/txt_karthik_testig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>


    <TextView
        android:gravity="center"
        android:padding="5dp"
        android:textSize="15sp"
        android:background="@drawable/background"
        android:text="15"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/text_test_value"
        android:layout_alignTop="@+id/txt_test"
        android:layout_alignLeft="@+id/text_testing_value"
        android:layout_alignStart="@+id/text_testing_value"
        android:layout_alignRight="@+id/text_testing_value"
        android:layout_alignEnd="@+id/text_testing_value" />








</RelativeLayout>