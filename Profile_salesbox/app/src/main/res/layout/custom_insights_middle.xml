<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#d3d5d5">

    <ImageView
        android:padding="2dp"
        android:id="@+id/image_run"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/icon_tab_contact_active_two"
        android:baselineAlignBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/text_shared_run"
        android:layout_alignEnd="@+id/text_shared_run" />

    <TextView
        android:text="Export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_shared_run"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/image_run"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ImageView
        android:id="@+id/image_export1"
        android:padding="2dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/icon_tab_favorite_active"
        android:baselineAlignBottom="true"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_run"
        android:layout_toEndOf="@+id/image_run" />

    <TextView
        android:text="Export1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_export1"
        android:layout_alignTop="@+id/text_shared_run"
        android:layout_alignLeft="@+id/image_export1"
        android:layout_alignStart="@+id/image_export1" />

    <ImageView
        android:id="@+id/image_display"
        android:padding="2dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/icon_ringlists_active"
        android:baselineAlignBottom="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_export1"
        android:layout_toEndOf="@+id/text_export1" />

    <TextView
        android:text="Display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_display"
        android:layout_alignTop="@+id/text_export1"
        android:layout_alignLeft="@+id/image_display"
        android:layout_alignStart="@+id/image_display" />

    <ImageView
        android:id="@+id/image_delete"
        android:padding="2dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/icon_organisation_active"
        android:baselineAlignBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_delete"
        android:layout_alignTop="@+id/text_display"
        android:layout_alignLeft="@+id/image_delete"
        android:layout_alignStart="@+id/image_delete" />


</RelativeLayout>