<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="#d3d5d5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:backgroundTint="#000000"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/ll_tab"
        android:layout_margin="15dp">
        <Button
            android:background="#ffffff"
            android:textSize="10sp"
            android:text="data"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_data"/>
        <Button
            android:background="#ffffff"
            android:textSize="10sp"
            android:text="Account"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_account"/>
        <Button
            android:background="#ffffff"
            android:textSize="10sp"
            android:text="activity"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_activity"/>
        <Button
            android:background="#ffff00"
            android:textSize="10sp"
            android:text="processes"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_process"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_text_part"
        android:layout_below="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/bt_previous"
            android:id="@+id/image_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_our_processes"
            android:text="Text Processes"
            android:layout_marginLeft="40dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_plus"
            android:src="@drawable/bt_add_small"
            android:layout_marginLeft="140dp"/>

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_right_arrow"
            android:src="@drawable/icon_arrow_right"/>

    </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_tick"
            android:src="@drawable/icon_check_done"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_consult"
            android:text="Consultant Sales"/>

        <RatingBar
            android:layout_marginTop="5dp"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_below="@+id/text_consult"
            android:layout_alignLeft="@+id/text_consult"
            android:layout_alignStart="@+id/text_consult" />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/text_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ratingBar"
            android:src="@drawable/icon_warning"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_consult"
            android:src="@drawable/icon_more_actions"
            android:layout_marginLeft="95dp"
            android:layout_marginStart="95dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:text="Shared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_shared"
            android:background="@drawable/background"
            android:layout_alignTop="@+id/text_consult"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp" />

    </RelativeLayout>

</RelativeLayout>