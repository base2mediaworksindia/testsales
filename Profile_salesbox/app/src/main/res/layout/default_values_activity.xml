<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:backgroundTint="#000000"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/ll_tab"
        android:layout_margin="15dp">
        <Button
            android:background="#006342"
            android:textSize="10sp"
            android:text="data"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_data"/>
        <Button
            android:background="#ffffff"
            android:textSize="10sp"
            android:text="Account"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_account"/>
        <Button
            android:background="#ffffff"
            android:textSize="10sp"
            android:text="activity"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_activity"/>
        <Button
            android:background="#ffffff"
            android:textSize="10sp"
            android:text="processes"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_process"/>

    </LinearLayout>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/ll_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_category"
        android:text="Category"/>

    <ImageView
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_category"
        android:src="@drawable/bt_next"/>

    <View
        android:id="@+id/view_category"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d8dc"
        android:layout_below="@+id/txt_category"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_focus"
        android:text="Focus"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_focux"
        android:src="@drawable/bt_next"/>

    <View
        android:id="@+id/view_focus"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d8dc"
        android:layout_below="@+id/txt_focus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_help_type"
        android:text="Help Type"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_help_type"
        android:src="@drawable/bt_next"/>

    <View
        android:id="@+id/view_help"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d8dc"
        android:layout_below="@+id/txt_help_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>